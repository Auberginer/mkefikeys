# -------- extensions --------

extensions = ext_sb

[ ext_ca ]
subjectKeyIdentifier    = hash
basicConstraints        = CA:true

[ ext_sb ]
subjectKeyIdentifier    = hash
authorityKeyIdentifier  = keyid
basicConstraints        = critical,CA:FALSE
extendedKeyUsage        = 1.3.6.1.4.1.2312.16.1.2

# -------- requests --------
[ req ]

default_bits        = 2048
default_md          = sha256
default_days        = 30

encrypt_key         = no
prompt              = no
#distinguished_name  = namespace
distinguished_name  = predefined

# -------- distinguished name preset -------
[ namespace ]

countryName                     = Country Code
stateOrProvinceName             = State or Province
localityName                    = Locality / City
organizationName                = Organization Name

organizationalUnitName          = Organizational Unit
organizationalUnitName_default  = Secureboot Keys

commonName                      = Common Name (Keytype)
commonName_default              =

[ predefined ]
C  = DE
O  = rz.semjonov.de
OU = SecureBoot Keys
CN = PREDEFINED
